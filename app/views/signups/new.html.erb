<h1> Signup for New Activity Here! </h1>

<% if flash[:errors] %>
<% flash[:errors].each do |error| %>
<p style="color: red"> <%= error %> </p>
<% end %>
<% end %>

<%= form_for @signup do |f| %>
<%= f.label :camper_id %>
<%= f.collection_select :camper_id, Camper.all, :id, :name %><br>
<%= f.label :activity_id %>
<%= f.collection_select :activity_id, Activity.all, :id, :name %><br>
<%= f.label :time %>
<%= f.number_field :time %><br>
<%= f.submit %>
<% end %>
<br>
<br>
<%= button_to "Return to Acitivities Index", activities_path, {method: :get} %>
